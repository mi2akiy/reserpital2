<div class="owners-container">
  <!--オーナーの新規登録-->
  <div class="owner-registration">
    <%= form_with model: @owner, url: url, method: :post do |f| %>
      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :パスワード再確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>

  <!--オーナー一覧-->
  <div class="owaners-index">
    <table class="table table-bordered">
      <tr>
        <th>名前</th>
        <th>email</th>
        <th></th>
      </tr>
      <% @owners.each do |owner| %>
      <tr>
        <td>
          <%= owner.name %>
        </td>
        <td>
          <%= owner.email %>
        </td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to '削除', admin_hospital_owner_path(@hospital.id,owner.id), method: :DELETE %>
          <% elsif owner_signed_in? %>
            <%= link_to '削除', owner_owner_path(owner.id), method: :DELETE %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>