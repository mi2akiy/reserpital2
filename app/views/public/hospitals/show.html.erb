<% if @reservation.present? && @reservation.errors.any? %>
  <ul>
  <% @reservation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= render 'admin/hospitals/hospital-information', hospital: @hospital %>

<!--メニューボタン-->
<div class="d-flex justify-content-center">
  <div class="m-2">
    <%= form_with url:public_hospital_reservations_path(@hospital), method: :post do |f| %>
      <%#= f.hidden_field :status, :value => "0" %>
      <%= f.submit '診察予約をする', class:"btn btn-success" %>
    <% end %>
  </div>
  <div class="m-2"><%= link_to "戻る", public_hospitals_path, class:"btn btn-light" %></div>
</div>