<div class="edit-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <table class="table">
      <tr>
        <td>
          <%= f.label :名前（姓） %>
        </td>
        <td>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </td>
      </tr>
  
      <tr>
        <td>
          <%= f.label :名前（名） %>
        </td>
        <td>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :フリガナ（セイ） %>
        </td>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :フリガナ（メイ） %>
        </td>
        <td>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :性別 %>
        </td>
        <td>
          <%= f.radio_button :sex, '男性' %>
          <%= f.label :sex, '男性' %>
    
          <%= f.radio_button :sex, '女性' %>
          <%= f.label :sex, '女性' %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :生年月日 %>
        </td>
        <td>
          <%= f.date_select :birthday,include_blank:true, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1) %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :メールアドレス %>
        </td>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
        
      <tr>
        <td>
          <%= f.label :電話番号 %>
        </td>
        <td>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :郵便番号（ハイフンなし） %>
        </td>
        <td>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :住所 %>
        </td>
        <td>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", style:"width: 100%;" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      
      <tr>
        <td>
          <%= f.label :パスワード再確認 %>
        </td>
        <td>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
  
    </table>
    <div class="text-center mb-4">
      <%= f.submit "登録" %>
    </div>
  <% end %>
</div>
